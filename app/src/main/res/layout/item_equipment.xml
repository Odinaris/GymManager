<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:visibility="gone"
    android:gravity="center_vertical">
    <me.odinaris.gymmanager.utils.SelectImageView
        android:id="@+id/equipment_iv_select"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_unselected"/>
    <TextView
        android:id="@+id/equipment_tv_name"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:text="篮球"
        android:textSize="16dp"
        android:textColor="#000000"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>
    <ImageView
        android:id="@+id/equipment_iv_subtract"
        android:layout_width="18dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:tint="#404040"
        android:src="@drawable/icon_subtract"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/equipment_tv_num"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="0"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/equipment_iv_add"
        android:layout_width="18dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:tint="#404040"
        android:src="@drawable/icon_add"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/equipment_tv_remain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="剩余85"
        android:textColor="#404040"
        android:textSize="16dp"
        android:gravity="center_vertical|start"
        android:visibility="gone"/>
</LinearLayout>


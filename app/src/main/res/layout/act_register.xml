<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_container_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_color">
    <!--_Logo -->
    <android.support.v7.widget.CardView
        android:id="@+id/register_cv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:cardCornerRadius="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:tint="#e9e9e9"/>

    </android.support.v7.widget.CardView>
    <!-- Register -->
    <LinearLayout
        android:id="@+id/register_ll_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:orientation="vertical">
        <EditText
            android:id="@+id/register_et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:maxLength="18"
            android:textSize="16sp"
            android:textColorHint="#c1c1c1"
            tools:inputType="text"/>
        <EditText
            android:id="@+id/register_et_Id"
            android:hint="学号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:inputType="textUri|textMultiLine"
            android:textColorHint="#c1c1c1"
            tools:inputType="text"/>
        <EditText
            android:id="@+id/register_et_password"
            android:hint="密码"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:password="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textColorHint="#c1c1c1"
            tools:inputType="textPassword"/>

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00000000"
        android:layout_marginTop="20dp"
        app:cardElevation="0dp">

        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="注册"
            android:textSize="16dp"
            android:textColor="#0173ec"
            android:backgroundTint="#ffffff"
             />

    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/register_tv_sign_in"
        android:text="已有账户？登陆"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:textColor="#f5f5f5"
        android:textSize="14dp"/>
</LinearLayout>
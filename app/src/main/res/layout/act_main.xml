<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/main_ll_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#0173ec">


        <TextView
            android:id="@+id/main_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gy-Mana"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="15dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_ll_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </LinearLayout>


    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/main_bnb_navigator"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bnbInactiveColor="#b1b1b1"
        app:bnbMode="mode_fixed"
        app:bnbBackgroundStyle="background_style_ripple"
        app:bnbActiveColor="#ffffff"
        app:bnbBackgroundColor="#0173ec"/>


</LinearLayout>

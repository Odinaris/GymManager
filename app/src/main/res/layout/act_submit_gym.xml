<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4">
    <RelativeLayout
        android:id="@+id/submit_rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#ebebeb">


        <TextView
            android:id="@+id/submit_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请场地"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#404040"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_below="@+id/submit_rl_title"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="场地信息:"
                android:textColor="#000"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/submit_tv_gymInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="20号篮球场"
                android:textColor="#000"
                android:textSize="16dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="租金:"
                android:gravity="right"
                android:textColor="#000"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/submit_tv_gymRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="20.0元"
                android:textColor="#000"
                android:textSize="16dp"/>



        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/submit_tv_totalAmount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="总金额:10.0元"
            android:textSize="16dp"
            android:textColor="#000"
            android:gravity="center"/>

        <Button
            android:id="@+id/submit_btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算"/>
    </LinearLayout>
</LinearLayout>